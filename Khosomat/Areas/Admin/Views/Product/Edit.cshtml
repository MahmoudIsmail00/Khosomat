@model ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.Title = "Edit Product";
}

<div class="row d-flex justify-content-between">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" asp-controller="Product" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.Img" />
            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Img"></label>
                <input type="file" name="file" id="imgfile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryList">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" >Save</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-warning">Back</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="poster-container">
            <img  src="~/@Model.Product.Img" width="300" height="300" />
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#imgfile').on('input', function () {
                var posterContainer = $('.poster-container');
                var image = window.URL.createObjectURL(this.files[0]);
                posterContainer.find('img').attr('src', image);
            });
        });
    </script>
}
