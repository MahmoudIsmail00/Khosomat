<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="~/summary/Style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <main>
            <form method="post" asp-action="Summary" asp-controller="Cart">
            <div class="row g-5 d-flex justify-content-between">
                <div class="col-md-5 col-lg-4 order-md-last summary">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Cart Summary</span>
                        <span class="badge bg-primary rounded-pill">@Model.CartsList.Sum(x=>x.Count)</span>
                    </h4>
                    <ul class="list-group mb-3">

                        @foreach (var item in Model.CartsList)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <img src="~/@item.Product.Img" width="50px" />
                                <div>
                                    <h6 class="my-0">@item.Product.Name</h6>
                                    <small class="text-muted">@item.Product.Description</small>
                                </div>
                                <span style="margin:5px">x @item.Count</span>
                                <span class="text-muted">$@item.Product.Price</span>
                            </li>
                        }

                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total (USD)</span>
                            <strong>$@Model.TotalCarts.ToString()</strong>
                        </li>
                    </ul>
                        <button class="w-100 btn btn-success btn-lg mb-3" type="submit">Continue Shopping</button>
                        <a class="w-100 btn btn-outline-primary btn-lg" asp-action="index" asp-controller="Home">Back to Shopping</a>
                </div>
                <div class="col-md-7 col-lg-8 billing">
                    <h4 class="mb-3">Billing address</h4>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Name</label>
                                <div class="input-group has-validation">
                                    <input type="text" class="form-control" asp-for="OrderHeader.Name" required>
                                    <div class="invalid-feedback">
                                        Your username is required.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <label  class="form-label">City</label>
                                <input type="text" class="form-control" asp-for="OrderHeader.City" required>
                                <div class="invalid-feedback">
                                    Please enter your city
                                </div>
                            </div>
                            <div class="col-12">
                                <label  class="form-label">Phone Number</label>
                                <input type="text" class="form-control" asp-for="OrderHeader.Phone">
                            </div>
                            <div class="col-12">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" asp-for="OrderHeader.Address">
                            </div>
                        </div>
                       
                </div>
            </div>
            </form>
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/summary/script.js"></script>
</body>
</html>
